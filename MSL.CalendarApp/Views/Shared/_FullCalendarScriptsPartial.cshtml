<script type="text/javascript">
    function getFormatedDate(date) {

        let startDate = new Date(date);

        let year = startDate.getFullYear();
        let month = ('0' + (startDate.getMonth() + 1)).slice(-2);
        let day = ('0' + startDate.getDate()).slice(-2);

        let hours = '00';
        let minutes = '00';
        let seconds = '00';

        return year + '-' + month + '-' + day + 'T' + hours + ':' + minutes + ':' + seconds;
    }
    var holidays = [];

    var calendarUrl = 'https://www.googleapis.com/calendar/v3/calendars/en.swedish%23holiday%40group.v.calendar.google.com/events?key=AIzaSyDfKWdpeRjC-731P6PQkR8DsKuuVewHpqc';
    $.getJSON(calendarUrl)
        .done(function (data) {
            $.each(data.items, function (index, value) {

                holidays.push({
                    title: value.summary,
                    start: value.start.date,
                    end: value.end.date
                })
            });
        })
    console.log(holidays);
    $(document).ready(function () {

        $('#calendar').fullCalendar({
            themeSystem: 'bootstrap',
            header: {
                left: 'prev,next today',
                arguments: 'title',
                right: 'month,agendaWeek,agendaDay list'
            },
            events: holidays,
            weekNumbers: true,
            eventTextColor: '#ffffff',
            locale: 'sv',
            buttonText: {
                today: 'i dag',
                month: 'nanad',
                week: 'vecka',
                day: 'dag',
                list: 'lista'
            }
            // put your options and callbacks here
        })
    });
</script>

